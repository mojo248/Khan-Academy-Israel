# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                      	Application.home
GET     /about                                  Application.home
GET     /about_ajax                             Application.about

# News page
GET     /news                                   Application.news

# News page
GET     /forum                                  Application.forum

# Administration

GET		/admin									Admin.form

# Contribute page
GET     /contribute                             Application.contribute

# Contact page
GET     /contact		                        Contact.form
POST    /contact                                Contact.send

# Catalog

GET		/catalog								Catalog.show
GET		/catalog/json							Catalog.showJson


# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import Secure routes
*       /                                    	module:secure
